    elements.stickerContent.innerHTML = pack.stickers.map(sticker => 
        '<div class="sticker-item" data-pack="' + pack.id + '" data-sticker="' + sticker.id + '">' +
            '<img src="' + sticker.url + '" alt="' + sticker.emoji + '">' +
